extends ../admin-layout

block content
  h1 Quản lý Danh mục
  a.btn.btn-success.mb-3(href="/admin/categories/add") Thêm danh mục mới

  table.table.table-bordered
    thead
      tr
        th ID
        th Tên danh mục
        th Mô tả
        th Hành động
    tbody
      if categories && categories.length > 0
        each category in categories
          tr
            td #{category.id}
            td #{category.name}
            td #{category.description}
            td
              a.btn.btn-primary.btn-sm(href=`/admin/categories/edit/${category.id}`) Sửa
              form(method="POST" action=`/admin/categories/delete/${category.id}` style="display:inline;")
                button.btn.btn-danger.btn-sm(type="submit") Xóa
      else
        tr
          td(colspan="4" class="text-center") Không có danh mục nào